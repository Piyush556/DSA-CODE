#include <stdio.h>

int main() {
   int ch, year;
   int n, sum, a, b;
   
   printf("1. For leap year\n");
   printf("2. For sum of ones and tens digit\n");
   printf("Enter a Choice\n");
   scanf("%d", &ch);
   
   switch(ch)
   {
       
       case 1 :
       printf("Enter any year\t");
       scanf("%d", &year);
       
       if (((year%4==0)&&(year%400==0)||(year%100)))
       printf("The Entered Year is a leap year");
       else
       printf("Enterd year is not leap year");
       break;

       case 2 :
       printf("enter a number\n");
       
       scanf("%d", &n);
        
       a=n%10;
       b=(n/10)%10;
       sum = a+b;
        
       printf("Sum of ones and tens of given number is %d", sum);
       break;
       
       default:
       printf("invalid choice");
       break;
        
   }
    return 0;
}
